<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Change Profile</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .btn-save {
            background-color: #ffc107;
            color: black;
            border: none;
        }
        .btn-save:hover {
            background-color: #e0ac07;
        }
    </style>
</head>
<body>

<!-- Modal -->
<div class="modal fade" id="changeProfileModal" tabindex="-1" aria-labelledby="changeProfileModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="changeProfileModalLabel">Change Profile</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Change Profile Form -->
                <form id="profileForm">
                    <div class="mb-3">
                        <label for="fullName" class="form-label">Full Name</label>
                        <input type="text" class="form-control" id="fullName" placeholder="Enter your full name" value="Muhammed Navas">
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" placeholder="Enter your email" value="muhammednavas382@email.com">
                    </div>
                    <div class="mb-3">
                        <label for="phone" class="form-label">Phone Number</label>
                        <input type="tel" class="form-control" id="phone" placeholder="Enter your phone number" value="7909173076">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-save" id="saveChangesBtn">Save Changes</button>
            </div>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<!-- Custom JS -->
<script>
    // JavaScript code for handling modal and saving changes
    document.addEventListener('DOMContentLoaded', () => {
        const editProfileBtn = document.getElementById('editProfileBtn');
        const saveChangesBtn = document.getElementById('saveChangesBtn');
        const profileForm = document.getElementById('profileForm');
        const fullNameInput = document.getElementById('fullName');
        const emailInput = document.getElementById('email');
        const phoneInput = document.getElementById('phone');

        // Simulated profile data
        const profileData = {
            fullName: 'Muhammed Navas',
            email: 'muhammednavas382@email.com',
            phone: '7909173076',
        };

        // Open modal when "Edit Profile" button is clicked
        editProfileBtn.addEventListener('click', () => {
            fullNameInput.value = profileData.fullName;
            emailInput.value = profileData.email;
            phoneInput.value = profileData.phone;
            const modal = new bootstrap.Modal(document.getElementById('changeProfileModal'));
            modal.show();
        });

        // Save changes and update profile
        saveChangesBtn.addEventListener('click', () => {
            profileData.fullName = fullNameInput.value;
            profileData.email = emailInput.value;
            profileData.phone = phoneInput.value;

            // Update the profile card on the main page
            const profileCard = document.querySelector('.profile-card');
            profileCard.querySelector('p:nth-of-type(1)').textContent = `Full Name: ${profileData.fullName}`;
            profileCard.querySelector('p:nth-of-type(2)').textContent = `Email: ${profileData.email}`;
            profileCard.querySelector('p:nth-of-type(3)').textContent = `Phone: ${profileData.phone}`;

            // Close the modal
            const modal = bootstrap.Modal.getInstance(document.getElementById('changeProfileModal'));
            modal.hide();
        });
    });
</script>
</body>
</html>