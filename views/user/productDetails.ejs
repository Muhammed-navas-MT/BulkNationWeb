<script>
         function redirectToCheckout(productId) {
        const quantity = document.getElementById('product-qty').value;
        const url = `/checkout?id=${productId}&quantity=${quantity}`;
        window.location.href = url;
         }
        function updateQuantity(change) {
            const qtyInput = document.getElementById('product-qty');
            const maxStockQty = parseInt(qtyInput.getAttribute('data-max-qty')) || 0;
            const maxAllowedQty = Math.min(5, maxStockQty);
            let currentQty = parseInt(qtyInput.value) || 1;
            
            currentQty = Math.max(1, Math.min(currentQty + change, maxAllowedQty));
            qtyInput.value = currentQty;
        }

      
        async function addToWishlist(productId) {
            console.log(productId);
            try {
                const response = await fetch('/add-to-wishlist', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ productId }),
                });

                const data = await response.json();

                if (!response.ok) {
                    Swal.fire({
                        title: 'Sorry',
                        text: data.message||null,
                        icon: 'error',
                        confirmButtonText: 'Okay'
                    });
                } else {
                    Swal.fire({
                        title: 'Success',
                        text: 'Product added to wishlist',
                        icon: 'success',
                        confirmButtonText: 'Okay'
                    });
                }
            } catch (error) {
                console.error('Error adding product to wishlist:', error);
                Swal.fire({
                  title: 'Welcome Back!',
                  text: 'Please log in to continue and access your account.',
                  icon: 'info',
                  confirmButtonText: '<a href="/signup">Log In',
                  footer: '<a href="/signup">Don’t have an account? Sign up here!</a>',
                });
            }
        };



       
        document.addEventListener("DOMContentLoaded", function () {
    const form = document.getElementById("commentForm");

    // Validation functions
    function namevalidate() {
        const name = document.getElementById("name").value.trim();
        const error = document.getElementById("nameError");
        const namePattern = /^[A-Za-z\s]+$/;

        if (name === "") {
            error.style.display = "block";
            error.innerHTML = "Please enter your name.";
            return false;
        } else if (!namePattern.test(name)) {
            error.style.display = "block";
            error.innerHTML = "Name can only contain letters and spaces.";
            return false;
        } else if (name.length < 3) {
            error.style.display = "block";
            error.innerHTML = "Name must be at least 3 characters long.";
            return false;
        } else {
            error.style.display = "none";
            return true;
        }
    }

    function descriptionvalidate() {
        const description = document.getElementById("description").value.trim();
        const error = document.getElementById("descriptionError");

        if (description === "") {
            error.style.display = "block";
            error.innerHTML = "Please enter a comment.";
            return false;
        } else if (!/[a-zA-Z]/.test(description)) {
            error.style.display = "block";
            error.innerHTML = "Comment must include at least one letter.";
            return false;
        } else if (description.length < 3) {
            error.style.display = "block";
            error.innerHTML = "Comment must be at least 3 characters long.";
            return false;
        } else {
            error.style.display = "none";
            return true;
        }
    }

    // Submit event listener
    form.addEventListener("submit", async (event) => {
        event.preventDefault();

        // Perform validations
        const isNameValid = namevalidate();
        const isDescriptionValid = descriptionvalidate();

        // Proceed only if all validations pass
        if (!isNameValid || !isDescriptionValid) {
            return;
        }

        // Fetch logic
        const productId = document.getElementById("id").value.trim();
        const description = document.getElementById("description").value.trim();
        const name = document.getElementById("name").value.trim();

        const formData = {
            description: description,
            name: name,
            productId: productId,
        };

        try {
            const response = await fetch("/addreview", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json",
                },
                body: JSON.stringify(formData),
            });

            const result = await response.json();

            if (response.ok) {
                // alert("Comment submitted successfully!");
                Swal.fire({
                    icon:"success",
                    title:"Success",
                    text:"Comment submitted successfully!"
                }).then(()=>{
                    window.location.reload();
                })
            } else {
                // alert(`Failed to submit comment: ${result.message || "Unknown error"}`);
                Swal.fire({
                    icon:"error",
                    title:"Error",
                    text:result.message|| "not found the data"
                })
            }
        } catch (error) {
            console.error("Error submitting comment:", error);
            // alert("An error occurred while submitting your comment. Please try again.");
            Swal.fire({
                icon:"error",
                title:"Error",
                text:"Internal Server Error"
            })
        }
    });
});

document.addEventListener("DOMContentLoaded", () => {
    // Get the Show button and modal
    const showButton = document.querySelector("#showCustomerQAButton");
    const modal = document.querySelector("#customerQAModal");
    const closeButton = document.querySelector("#closeModalButton");

    // Show the modal when the button is clicked
    showButton.addEventListener("click", () => {
        modal.style.display = "block"; // Display the modal
    });

    // Hide the modal when the close button is clicked
    closeButton.addEventListener("click", () => {
        modal.style.display = "none"; // Hide the modal
    });

    // Hide the modal when clicking outside the modal content
    window.addEventListener("click", (event) => {
        if (event.target === modal) {
            modal.style.display = "none"; // Hide the modal
        }
    });
});

