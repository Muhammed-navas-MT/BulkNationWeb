<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


<script>
    const cashOnDelivery  = document.querySelector("#cash").textContent;
    let selectedAddress = null; 
    let selectedAddressIndex = null; 

   
    document.querySelectorAll('#addressButton').forEach((button, index) => {
        button.addEventListener('click', (e) => {
            e.preventDefault();

            
            if (selectedAddressIndex !== null) {
                document.querySelectorAll('.address-item')[selectedAddressIndex].classList.remove('selected');
            }

          
            const addressItem = document.querySelectorAll('.address-item')[index];
            addressItem.classList.add('selected'); 
            selectedAddressIndex = index; 

            selectedAddress = {
                name: addressItem.querySelector('#name').value,
                addressType: addressItem.querySelector('#address').value.split(',')[0].trim(),
                city: addressItem.querySelector('#address').value.split(',')[1].trim(),
                state: addressItem.querySelector('#address').value.split(',')[2].trim(),
                landmark: addressItem.querySelector('#landmark').value,
                pincode: addressItem.querySelector('#pincode').value,
                phone: addressItem.querySelector('#phone').value,
                altPhone: addressItem.querySelector('#altPhone').value,
                
            };
            Swal.fire({
                icon: 'success',
                title: 'Address Selected',
                text: `You have selected an address for shipping.`,
            });
        });
    });


    document.querySelector('#order').addEventListener('click', async (e) => {
        e.preventDefault();

        if (!selectedAddress) {
            Swal.fire({
                icon: 'error',
                title: 'No Address Selected',
                text: 'Please select a shipping address before placing the order.',
            });
            return;
        }

        const productElements = document.querySelectorAll('.order_table tbody tr');
        const products = Array.from(productElements).map(row => {
            const productNameElement = row.querySelector('td:nth-child(2) h5 a');
            const quantityElement = row.querySelector('.product-qty');
            const priceElement = row.querySelector('#salePrice');
            const productIdElement = row.querySelector("#productId");

            if (productNameElement && priceElement) {
                return {
                    name: productNameElement.textContent.trim(),
                    quantity: quantityElement ? parseInt(quantityElement.textContent.split(':')[1].trim()) : 1,
                    price: parseFloat(priceElement.textContent.replace('â‚¹', '').trim()),
                    id: productIdElement ? productIdElement.textContent.trim() : null
                };
            }
        }).filter(product => product);


        const subtotal = parseFloat(document.querySelector('#subtotal').textContent.replace('â‚¹', '').trim());
        const total = subtotal; 

        // Payload
        const payload = {
            address: selectedAddress,
            products,
            subtotal,
            total,
            paymentMethod:cashOnDelivery,
        };

        try {
            const response = await fetch('/checkout', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(payload)
            });

            if (response.ok) {
                const data = await response.json();
                console.log(data);
                // Swal.fire({
                //     icon: 'success',
                //     title: 'Order Placed',
                //     text: data.message,
                // });
                window.location.href=`/orderComform?id=${data.orderId}`
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Order Failed',
                    text: data.message,
                });
            }
        } catch (error) {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'An unexpected error occurred. Please try again later.',
            });
            console.error('Error:', error);
        }
    });
</script>




