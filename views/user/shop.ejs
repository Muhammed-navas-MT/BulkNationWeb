<script>

    function applySort(sortType) {
        const url = new URL(window.location.href);
        
        // Set the sort parameter
        if (sortType) {
            url.searchParams.set("sort", sortType);
        } else {
            url.searchParams.delete("sort");
        }

        // Optionally reset to page 1 when sorting changes
        url.searchParams.set("page", 1);

        // Redirect to the updated URL
        window.location.href = url.toString();
    };


    async function addToWishlist(productId) {
            try {
                const response = await fetch('/add-to-wishlist', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ productId }),
                });

                const data = await response.json();

                if (!response.ok) {
                    Swal.fire({
                        title: 'Sorry',
                        text: data.message||null,
                        icon: 'error',
                        confirmButtonText: 'Okay'
                    });
                } else {
                    Swal.fire({
                        title: 'Success',
                        text: 'Product added to wishlist',
                        icon: 'success',
                        confirmButtonText: 'Okay'
                    });
                }
            } catch (error) {
                console.error('Error adding product to wishlist:', error);
                Swal.fire({
                  title: 'Welcome Back!',
                  text: 'Please log in to continue and access your account.',
                  icon: 'info',
                  confirmButtonText: '<a href="/signup">Log In',
                  footer: '<a href="/signup">Don’t have an account? Sign up here!</a>',
                });
            }
    };

    function clearFilters() {
    const url = new URL(window.location.href);
    
    url.search = "";
    url.searchParams.set("page", 1);

    window.location.href = url.toString();
};

function generatePaginationLinks(totalPages, currentSort) {
    const url = new URL(window.location.href);
    const paginationContainer = document.getElementById("pagination");

    paginationContainer.innerHTML = ""; // Clear existing pagination links

    for (let i = 1; i <= totalPages; i++) {
        const pageUrl = new URL(url); // Clone the current URL
        pageUrl.searchParams.set("page", i);

        if (currentSort) {
            pageUrl.searchParams.set("sort", currentSort);
        }

        const link = document.createElement("a");
        link.href = pageUrl.toString();
        link.textContent = i;
        link.className = "page-link";

        paginationContainer.appendChild(link);
    }
}

  </script>
  


